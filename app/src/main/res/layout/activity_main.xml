<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChooseImage"
        android:text="Choose Image"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_fileName"
        android:layout_toEndOf="@+id/buttonChooseImage"
        android:layout_marginStart="16dp"
        android:hint="Enter file name"
        android:layout_toRightOf="@+id/buttonChooseImage"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_view"
        android:layout_below="@id/edit_text_fileName"
        android:layout_above="@id/progress_ber"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <ProgressBar
        android:layout_marginBottom="16dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_above="@+id/Button_Upload"
        android:id="@+id/progress_ber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Upload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="upload"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Uploads"
        android:layout_alignBaseline="@id/Button_Upload"
        android:layout_alignBottom="@id/Button_Upload"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/Button_Upload"
        android:id="@+id/text_View_Show_uploads"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:layout_toRightOf="@id/Button_Upload" />




</RelativeLayout>